<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:spinnerStyle">@style/Custom.Widget.Spinner</item>
    </style>

    <style name="Custom.Widget.Spinner" parent="android:Widget.Spinner.DropDown">
        <item name="android:background">@drawable/spinner_ab_holo_dark</item>
          <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:popupBackground">@drawable/spinner_dropdown_background</item>
    </style>

</resources>